<h1 style="text-align: center">Upload Products File</h1>
<div style="text-align:center;position: absolute; right: 0;left: 0; top:15%">

  <% flash.each do |_, msg| %>
      <%= content_tag :div, msg,:class => 'flash_message' %>
  <% end %>

  <%= form_tag '/import_products?format=json', :multipart => true, :style => 'display: inline-block;text-align: center;' do %>
      <%= file_field_tag :file %>
      <br>
      <br>
      <%= submit_tag %>
  <% end %>
</div>